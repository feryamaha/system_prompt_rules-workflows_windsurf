    "nemesis:scope": "bun run src/workflow-enforcement/cli/scope.ts",
    "nemesis:install-hooks": "bun run src/workflow-enforcement/cli/install-hooks.js"
  },
  "dependencies": {
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
