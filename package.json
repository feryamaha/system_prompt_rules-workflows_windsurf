{
  "name": "nemesis-framework",
  "version": "0.1.0",
  "description": "Framework de governanca de IA com regras e workflows para Windsurf - Nemesis",
  "license": "UNLICENSED",
  "main": "index.js",
  "bin": {
    "install-nemesis": "index.js"
  },
  "files": [
