        "show_output": true
      }
    ],
    "pre_run_command": [
      {
        "command": "bash $PROJECT_DIR/.nemesis/hooks/nemesis-pretool-check.sh",
        "show_output": true
      }
    ],
    "pre_read_code": [
      {
        "command": "bash $PROJECT_DIR/.nemesis/hooks/nemesis-pretool-check.sh",
        "show_output": true
      }
